{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "order-data-pipeline",
        "creationTimestamp": null,
        "annotations": {
            "description": "order-data-pipeline application for spark streaming",
            "tags": "quickstart,nodejs,mongodb",
            "iconClass": "icon-nodejs"
        }
    },
    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${ORDER_SERVICE_NAME}",
            "creationTimestamp": null
        },
        "spec": {
            "ports": [{
                "name": "order-data-pipeline-ui",
                "port": 8181,
                "targetPort": 8181
            }, {
                "name": "order-data-pipeline-rest",
                "port": 8080,
                "targetPort": 8080
            }, {
                "name": "order-data-pipeline-mongodb",
                "port": 27017,
                "targetPort": 27017
            }],
            "selector": {
                "name": "${ORDER_SERVICE_NAME}"
            },
            "portalIP": "",
            "type": "ClusterIP",
            "sessionAffinity": "None"
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "DeploymentConfig",
        "apiVersion": "v1",
        "metadata": {
            "name": "${ORDER_SERVICE_NAME}",
            "creationTimestamp": null
        },
        "spec": {
            "strategy": {
                "type": "Recreate"
            },
            "replicas": 1,
            "selector": {
                "name": "${ORDER_SERVICE_NAME}"
            },
            "template": {
                "metadata": {
                    "creationTimestamp": null,
                    "labels": {
                        "name": "${ORDER_SERVICE_NAME}"
                    }
                },
                "spec": {
                    "containers": [{
                            "name": "order-data-pipeline-web-ui",
                            "image": "docker.io/onlinestreaminganalytics/order-web-ui",
                            "env": [{
                                "name": "MONGODB_USER",
                                "value": "admin"
                            }, {
                                "name": "MONGODB_PASSWORD",
                                "value": "admin"
                            }, {
                                "name": "MONGODB_DATABASE",
                                "value": "onlinestore"
                            }],
                            "ports": [{
                                "containerPort": 8181
                            }]
                        }
                        , {
                            "name": "order-data-pipeline-rest-api",
                            "image": "docker.io/onlinestreaminganalytics/etl-integration-webservice",
                            "env": [{
                                "name": "MONGODB_USER",
                                "value": "admin"
                            }, {
                                "name": "MONGODB_PASSWORD",
                                "value": "admin"
                            }, {
                                "name": "MONGODB_DATABASE",
                                "value": "onlinestore"
                            }],
                            "ports": [{
                                "containerPort": 8080
                            }]
                        }, {
                            "name": "order-data-pipeline-database",
                            "image": "docker.io/centos/mongodb-32-centos7",
                            "env": [{
                                "name": "MONGODB_USER",
                                "value": "admin"
                            }, {
                                "name": "MONGODB_PASSWORD",
                                "value": "admin"
                            }, {
                                "name": "MONGODB_DATABASE",
                                "value": "onlinestore"
                            }, {
                                "name": "MONGODB_ADMIN_PASSWORD",
                                "value": "admin"
                            }],
                            "ports": [{
                                "containerPort": 27017
                            }]
                        }


                    ]
                }
            }
        }
    }],
    "parameters": [{
        "name": "ORDER_SERVICE_NAME",
        "displayName": "order-data-pipeline Service Name",
        "required": true,
        "value": "orderdatapipeline"
    }, {
        "name": "MONGODB_USER",
        "displayName": "MongoDB Username",
        "description": "Username for MongoDB user that will be used for accessing the database.",
        "generate": "expression",
        "from": "user[A-Z0-9]{3}"
    }, {
        "name": "MONGODB_PASSWORD",
        "displayName": "MongoDB Password",
        "description": "Password for the MongoDB user.",
        "generate": "expression",
        "from": "[a-zA-Z0-9]{16}"
    }, {
        "name": "MONGODB_DATABASE",
        "displayName": "Database Name",
        "value": "onlinestore"
    }],
    "message": "You can connect to the database using MongoDB connection URL mongodb://${MONGODB_USER}:${MONGODB_PASSWORD}@${DATABASE_SERVICE_NAME}/${MONGODB_DATABASE}"
}
